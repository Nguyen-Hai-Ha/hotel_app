{
  "name": "hotel-admin",
  "version": "1.0.2",
  "description": "Hotel Admin Panel - Electron App",
  "author": "Hotel Management System",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint:oxlint": "oxlint . --fix -D correctness --ignore-path .gitignore",
    "lint:eslint": "eslint . --fix",
    "lint": "run-s lint:*",
    "electron": "electron .",
    "electron:dev": "cross-env NODE_ENV=development electron .",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:linux": "npm run build && electron-builder --linux",
    "electron:publish": "npm run build && electron-builder --win --publish always",
    "electron:pack:win": "npm run build && electron-packager . hotel-admin --platform=win32 --arch=x64 --out=dist-packaged-new --overwrite"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^7.0.0",
    "@fortawesome/free-regular-svg-icons": "^7.0.0",
    "@fortawesome/free-solid-svg-icons": "^7.0.0",
    "@fortawesome/vue-fontawesome": "^3.1.1",
    "axios": "^1.11.0",
    "dayjs": "^1.11.19",
    "electron-updater": "^6.7.3",
    "qrcode": "^1.5.4",
    "vue": "^3.5.18",
    "vue-i18n": "^9.14.5",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@vitejs/plugin-vue": "^4.5.0",
    "cross-env": "^10.0.0",
    "electron": "^37.4.0",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2",
    "eslint": "^9.31.0",
    "eslint-plugin-oxlint": "~1.8.0",
    "eslint-plugin-vue": "~10.3.0",
    "globals": "^16.3.0",
    "npm-run-all2": "^8.0.4",
    "oxlint": "~1.8.0",
    "vite": "^4.5.0",
    "vite-plugin-vue-devtools": "^7.0.0"
  },
  "build": {
    "appId": "com.hotel.admin",
    "productName": "Hotel Admin Panel",
    "directories": {
      "output": "dist-electron4"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "extraResources": [],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "signAndEditExecutable": false,
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "owner": "Nguyen-Hai-Ha",
      "repo": "hotel_app"
    },
    "beforeBuild": null,
    "afterSign": null,
    "afterAllArtifactBuild": null
  }
}